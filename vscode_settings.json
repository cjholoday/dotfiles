{
    "editor.lineNumbers": "on",
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/log_*": true
    },
    "vim.disableAnnoyingNeovimMessage": true,
    // Improve search highlighting
    "vim.incsearch": true,
    "vim.hlsearch": true,
    // Sidestep extra yanking keystrokes and complexities
    "vim.useSystemClipboard": true,
    "vim.leader": "<space>",
    "vim.useCtrlKeys": true,
    "vim.insertModeKeyBindings": [
        {
            // Faster insert mode exit
            "before": [
                "j",
                "k"
            ],
            "after": [
                "<Esc>"
            ]
        }
    ],
    "vim.normalModeKeyBindingsNonRecursive": [
        {
            "before": [
                "leader",
                "f"
            ],
            "commands": [
                "workbench.action.files.save",
            ]
        }
    ],
    // Do not overwrite important shortcuts
    "vim.handleKeys": {
        "<C-a>": false,
        "<C-f>": false,
        "<C-c>": false
    },
    // Use the natively supported vim plugins
    "vim.surround": true,
    "vim.visualstar": true,
    "vim.easymotion": true,
    "extensions.ignoreRecommendations": true,
    "go.inferGopath": true,
    "go.formatTool": "gofmt",
    "go.formatOnSave": true,
    "go.useDiffForFormatting": false,
    "python.formatting.formatOnSave": true,
    "python.linting.pycodestyleEnabled": true,
    "python.linting.pydocstyleEnabled": true,
    "python.linting.pylintEnabled": true,
    "editor.wrappingIndent": "indent",
    "editor.wordWrap": "on",
    "C_Cpp.clang_format_fallbackStyle": "{ BasedOnStyle: LLVM, UseTab: Never, IndentWidth: 4, TabWidth: 4, BreakBeforeBraces: Attach, AllowShortIfStatementsOnASingleLine: false, IndentCaseLabels: false, ColumnLimit: 0, AccessModifierOffset: -4 }",
    "git.ignoreLegacyWarning": true,
    "trailing-spaces.highlightCurrentLine": false,
    "clangd.detectExtensionConflicts": false,
    "C_Cpp.dimInactiveRegions": false
}